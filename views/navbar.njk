<nav class="navbar">
  <button class="navbar__toggler"></button>
  <div class="navbar__container collapsed">
    <ul class="navbar__menu navbar__menu--start">
      <li>
        <a class="navbar__link" href="/">Início</a>
      </li>
      {% if req.user.isAuthenticated %}
        <li>
          <a class="navbar__link" href="/account/polls">Minhas votações</a>
        </li>
      {% endif %}
    </ul>
    <form class="navbar__search" action="/polls/search" method="GET">
      <input class="search__input" type="search" name="title" pattern=".*\S.*" title="Digite pelo menos 1 caractere." required placeholder="Digite o título de uma votação" maxlength="60"/>
      <button class="search__submit-button" type="submit"><img src="/images/magnifying_glass.png" alt="Imagem de uma lupa" width="25" height="auto"/></button>
    </form>
    {% if req.user.isAuthenticated %}
      <ul class="navbar__menu navbar__menu--end">
        <li>
          <a class="navbar__link" href="/account/logout">Sair</a>
        </li>
      </ul>
    {% else %}
      <ul class="navbar__menu navbar__menu--end">
        <li>
          <a class="navbar__link" href="/account/register">Cadastrar</a>
        </li>
        <li>
          <a class="navbar__link" href="/account/login">Entrar</a>
        </li>
      </ul>
    {% endif %}
  </div>
</nav>