{% extends "base.njk" %}

{% block head %}
  <link rel="stylesheet" href="/css/formulario.css">
{% endblock %}

{% block main %}
  <form class="form" action="/conta/login" method="POST">
    <h1 class="form__title">Entrar</h1>
    <label for="username">Nome de usuário</label>
    <input class="form__input" name="username" type="text" required placeholder="Digite o seu nome de usuário" autocomplete="nickname" minlength="4" maxlength="30"/>
    <label for="password">Senha</label>
    <input class="form__input" name="password" type="password" required placeholder="Digite sua senha" autocomplete="current-password" minlength="6"/>
    <button class="form__submit-button" type="submit">Enviar</button>
  </form>
{% endblock %}