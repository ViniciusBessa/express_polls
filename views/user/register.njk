{% extends "base.njk" %}

{% block head %}
  <link rel="stylesheet" href="/css/form.css">
{% endblock %}

{% block main %}
  <form class="form" action="/account/register" method="POST">
    <h1 class="form__title">Cadastro</h1>
    <label for="username">Nome de usuário</label>
    <input class="form__input" name="username" type="text" required placeholder="Digite um nome de usuário" minlength="4" maxlength="30"/>
    <label for="password">Senha</label>
    <input class="form__input" name="password" type="password" required placeholder="Digite uma senha" autocomplete="current-password" minlength="6"/>
    <label for="email">E-mail</label>
    <input class="form__input" name="email" type="email" required placeholder="Digite seu e-mail" autocomplete="email" maxlength="50"/>
    <button class="form__submit-button" type="submit">Enviar</button>
  </form>
  <div class="form__alert"></div>
{% endblock %}

{% block footer %}
  <script src="/script/formHandler.js"></script>
{% endblock %}